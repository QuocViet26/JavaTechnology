<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_row_waiting_review"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView_product"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_nameProduct"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="" />

        <LinearLayout
            android:id="@+id/linearLayout_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_star1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_no_review" />

            <ImageView
                android:id="@+id/imageView_star2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_no_review" />

            <ImageView
                android:id="@+id/imageView_star3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_no_review" />

            <ImageView
                android:id="@+id/imageView_star4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_no_review" />

            <ImageView
                android:id="@+id/imageView_star5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star_no_review" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>