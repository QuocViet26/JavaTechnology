<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/layout_item"
    android:background="@drawable/custom_item"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_ShowAll"

        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Catalog Parent"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:id="@+id/textView_name_catalogParent"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TẤT CẢ"
            android:textStyle="bold"
            android:textSize="14dp"
            android:id="@+id/textView_viewAll"
            android:textColor="@color/colorTikiBottomNavigation"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView_catalog"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>